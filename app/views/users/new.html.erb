<div class="row justify-content-md-center mt-5">
  <div class="col-6">
    <div class="card">
      <div class="card-header green">
        <h2>Sign Up Now!</h2>
      </div>
      <div class="card-body">

        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.text_field :username, {class: "form-control form-control-lg", placeholder: "Username"} %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, {class: "form-control form-control-lg", placeholder: "Password"} %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, {class: "form-control form-control-lg", placeholder: "Confirm Password"} %>
          </div>

          <div class="form-group">
            <%= f.text_field :first_name, {class: "form-control form-control-lg", placeholder: "First Name"} %>
          </div>

          <div class="form-group">
            <%= f.text_field :last_name, {class: "form-control form-control-lg", placeholder: "Last Name"} %>
          </div>

          <div class="form-group">
            <%= f.label :birthdate %>
            <%= f.date_select :birthdate, {class: "form-control form-control-lg", placeholder: "Birthdate", start_year: 1910, end_year: 2006, order: [:month, :day, :year], default: { month: 6, day: 15, year: 1980 }} %>
          </div>

          <div class="form-group">
            <%= f.text_field :email, {class: "form-control form-control-lg", placeholder: "Email"} %>
          </div>

          <ul class="error-wrap list-group-flush">
            <% @user.errors.full_messages.each do |message| %>
              <li class="list-group-item"><%= message %></li>
            <% end %>
          </ul>

          <div class="row">
            <div class="col"><%= f.submit "Sign Up!", {class: "btn btn-success"} %></div>
            <div class="col text-right"><%= link_to "Already have an account?", login_path %></div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
