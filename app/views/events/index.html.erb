<div class="row mt-5">
  <div class="col">
    <h1>Network Events</h1>
  </div>
</div>

<hr>
<%= link_to "Create an Event", new_event_path, class: "btn btn-secondary" %>

<div class="row">
  <div class="col">
    <div class="card mt-5">
      <div class="card-header blue">
        <h3>My Events</h3>
      </div>
      <div class="card-body">

        <ul class="list-group">
          <% @user.my_events.each do |event| %>
            <li class="list-group-item"><%= link_to event.name, event %></li>
          <% end %>
        </ul>

      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="card mt-5">
      <div class="card-header green">
        <h3>Priority Events</h3>
      </div>
      <div class="card-body">

        <ul class="list-group">
          <% @user.get_ranked_contacts.each do |contact| %>
            <% contact.ranks.each do |a_rank| %>
              <% if a_rank.rankee_id == @user_id && a_rank.rank > 2 %>
                <% contact.my_events.each do |event| %>
                  <% if event.required_rank >= a_rank.rank %>
                    <li class="list-group-item"><%= link_to event.name, event %>
                    <% if User.find(@user.id).events.include? event %>
                      <%= button_to 'Cancel', {:controller => "events", :action => "unattend", :params => {:attendee => {:event_id => event.id, :user_id=> @user.id, hidden: true}}} , :method=>:update  %>
                    <% else %>
                       <%= button_to 'Attend', {:controller => "events", :action => "attend", :params => {:attendee => {:event_id => event.id, :user_id=> @user.id}}} , :method=>:post  %>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </ul>

      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="card mt-5">
      <div class="card-header yellow">
        <h3>Other Events</h3>
      </div>
      <div class="card-body">

        <ul class="list-group">
          <% @events.each do |event| %>
            <% event.creator.ranks.each do |a_rank| %>
              <% if a_rank.rankee.id == @user.id && a_rank.rank > 1 %>
                <% if @user.get_ranked_contacts.exclude? event.creator %>
                  <li class="list-group-item">
                    <div class="row">

                      <div class="col-auto">
                        <% if User.find(@user.id).events.include? event %>
                          <%= button_to 'Cancel', {:controller => "events", :action => "unattend", :params => {:attendee => {:event_id => event.id, :user_id=> @user.id, hidden: true}}} , :method=>:update, class: "btn btn-secondary btn-sm"  %>
                        <% else %>
                           <%= button_to 'Attend', {:controller => "events", :action => "attend", :params => {:attendee => {:event_id => event.id, :user_id=> @user.id}}} , :method=>:post, class: "btn btn-secondary btn-sm" %>
                        <% end %>
                      </div>
                      <div class="col">
                        <%= link_to event.name, event %>
                      </div>

                    </div>
                  </li>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </ul>

      </div>
    </div>
  </div>
</div>
