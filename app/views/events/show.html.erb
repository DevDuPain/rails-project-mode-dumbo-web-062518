<div class="row">
  <div class="col">
    <div class="card mt-5">
      <div class="card-header green">
        <h2><%= @event.name %></h2>
      </div>
      <div class="card-body">
        <p>Created by: <%= @event.creator.username %></p>
        <p>Location:<br> <%= @event.location.name %></p>
        <p>Address<br> <%= @event.location.address %></p>
        <p>When<br> <%= @event.date %></p>
        <p><%= @event.description %></p>
        Look Whose Coming!:
        <ul>
          <% @event.attendees.each do |attendee|%>
            <li><%= attendee.user.username %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
